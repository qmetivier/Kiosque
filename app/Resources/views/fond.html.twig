{# app/Resources/views/fond.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{% block title %}Kiosque Conserto {% endblock %}</title>
  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="/Symfony/web/lib/bootstrap-4.0.0-alpha.6-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Symfony/web/lib/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Symfony/web/css/style.css">
    <link rel="shortcut icon" href="/Symfony/web/img/ico.ico" type="image/vnd.microsoft.icon">
  {% endblock %}
</head>
<header>
        <!-- Entete de la page -->
  <div class="title_header">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-4">
          Kiosque Conserto
        </div>
      </div>
    </div>
  </div>
  {% block navBar %}

  {% endblock %}
  {% for message in app.session.flashbag.get('notice') %}
    <div class="row justify-content-center" style="background-color: lightgreen;">
      {{ message }}
    </div>
  {% endfor %}
</header>
{% block body %}
{% endblock %}
<footer>

        <!-- Pied de page -->
<div class="footer_down">
  <div class="container">
    <div class="row">
      <div class="col liste_footer_down">
        <ul>
          <li class="li_title">NOS SITES</li>
          <li><a target="blank" href="https://www.conserto.pro">Conserto</a></li>
          <li><a target="blank" href="http://www.robotopi.com/">Robotopi</a></li>
        </ul>
      </div>
      <div class="col Contact_mail">
        <a target="blank" href="https://www.conserto.pro/#block-consertocontactform">
          <div>Contactez Nous</div>
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>
</div>
{% block javascripts %}
  {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
  <script src="/Symfony/web/lib/tether-1.3.3/dist/js/tether.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="/Symfony/web/lib/bootstrap-4.0.0-alpha.6-dist/js/bootstrap.min.js"></script>
{% endblock %}
</footer>
</html>
